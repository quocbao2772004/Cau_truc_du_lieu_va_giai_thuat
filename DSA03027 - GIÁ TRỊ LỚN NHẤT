#include <bits/stdc++.h>

using namespace std;

void goi()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
}

int test;
int n;
int main()
{
    goi();
 
    cin>>n;
    vector<long long>a(n+1);
    for(int i=1;i<=n;i++)cin>>a[i];
    long long sum=0;
    for(int i=1;i<=n;i++)
    if(a[i]>0)
    {
        sum=sum+(a[i]*2);
    }
    cout<<sum<<endl;     


    return 0;
}
