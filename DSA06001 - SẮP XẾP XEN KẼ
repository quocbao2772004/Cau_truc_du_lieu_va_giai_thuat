def main():
    test=int(input())
    while(test>0):
        n=int(input())
        lst=list(map(int,input().split()))
        lst.sort()
        i,j=0,n-1
        while i<=j :
            if i==j:
                print(lst[j],end=" ")
            else :
                print(lst[j],end=" ")
                print(lst[i],end=" ")
            j-=1
            i+=1
        print()
        test-=1
if __name__=='__main__':
    main()
