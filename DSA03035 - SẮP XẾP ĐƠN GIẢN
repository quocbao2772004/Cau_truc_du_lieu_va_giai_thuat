#include <bits/stdc++.h>

using namespace std;

void goi()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    //fi;fo;

}

int test;
int n,k,m;
string s;
int main()
{
    goi();
    
       cin>>n;
       vector<int>a(n+1);
       for(int i=1;i<=n;i++)cin>>a[i];
       vector<int>f(n+1,0);
       for(int i=1;i<=n;i++)
       {
         f[a[i]]=f[a[i]-1]+1;
       }
       cout<<n-*max_element(f.begin(),f.end())<<endl;
    return 0;
}

