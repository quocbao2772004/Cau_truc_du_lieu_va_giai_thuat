#include <bits/stdc++.h>
#define ll long long
using namespace std;
void faster()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
}
int test;
int n,k;
ll tknp(vector<ll>&a,ll left,int right,ll k)
{
    ll res=-1;
    while(left<=right)
    {
        int mid=(left+right)/2;
        if(a[mid]<k)
        {
            res=mid;
            left=mid+1;
        }
        else right=mid-1;
    }
    return res;

}
// 1 2 4 10
int main() 
{
    faster();
    cin>>test;
    while(test--)
    {
        cin>>n>>k;
        vector<ll>a(n);
        for(int i=0;i<n;i++)cin>>a[i];
        sort(a.begin(),a.end());
        ll ans=0;
        // for(auto i : a)
        // {
        //     cout<<i<<" ";
        // }
        // cout<<endl;
        for(int i=0;i<n-1;i++)
        {
            ll x=tknp(a,i+1,n-1,a[i]+k);
            //cout<<x<<" ";
            if(x!=-1)
            {
                ans+=x-i;
            }
        }
        //cout<<endl;
        cout<<ans<<endl;
    }
    

    return 0;
}
