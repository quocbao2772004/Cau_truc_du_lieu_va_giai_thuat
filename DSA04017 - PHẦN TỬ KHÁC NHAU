#include <bits/stdc++.h>
#define ll long long
using namespace std;
void faster()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
}
int test;
int n,k1,m;

int main() 
{
    faster();
    
    cin>>test;
    while(test--)
    {
        cin>>n;
        vector<int>a(n+1),b(n+1);
        for(int i=1;i<=n;i++)
        {
            cin>>a[i];
        }
        for(int i=1;i<=n-1;i++)cin>>b[i];
        for(int i=1;i<=n;i++)
        {
            if(a[i]!=b[i]){cout<<i<<endl;break;}
        }
        

    }
    

    return 0;
}
